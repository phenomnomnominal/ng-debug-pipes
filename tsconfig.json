{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "ng-debug-pipes": [
        "projects/ng-debug-pipes/dist/ng-debug-pipes"
      ],
      "ng-debug-pipes/*": [
        "projects/ng-debug-pipes/dist/ng-debug-pipes/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": false, // this being off is sad :(
    "strictInjectionParameters": true
  }
}